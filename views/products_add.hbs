<div class="big-container product-manage-wrapper flexed-item">
  <form action="/prod-add" method="POST" class="add-product-form">
    <h3 class="form-title">Add Sneackers to the collection</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="name" class="label-name label">Model name</label>
      <input name="name" type="text" class="input-text input" placeholder="Nike Air Max 90">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="ref" class="label-ref label">RÃ©f.</label>
      <input name="ref" type="text" class="input-text input" placeholder="ex: NV23498">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sizes" class="label-ref label">Size</label>
      <input name="sizes" type="number" class="input-text input" placeholder="ex: 37">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="description" class="label-descr label">Description</label>
      <input type="text" name="description" class="input-text input" placeholder="The better sneakers to run">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="price" class="label-price label">Price</label>
      <input type="number" name="price" class="sneacker-price input" min="1">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="category" class="label-main-cat label">Main category</label>
      <select name="category" id="main_category" class="select">
        <option value="">Choose main Category...</option>
        <option value="Men">Men</option>
        <option value="Women">Women</option>
        <option value="Kids">Kids</option>
      </select>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label class="label">Tags</label>
      <select name="id_tags" id="secondary_category" class="select">
        <option value="">Choose Secondary Category...</option>
        <option value="Friendly">Friendly</option>
        <option value="Urban style">Urban style</option>
        <option value="Dope">Dope</option>
      </select>
    </div>
    <button class="button-primary add-sneacker-btn">Add to collection</button>
  </form>

  <form action="POST" class="add-category-form">
    <h3 class="form-title">Add tags</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="category-name" class="category-name label">Sneaker tag</label>
      <input type="text" class="input" placeholder="ex: Gangsta">
    </div>
    <button class="button-primary add-category-btn">Create this category</button>
  </form>
</div>